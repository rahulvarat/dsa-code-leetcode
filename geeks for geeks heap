class Solution {
  public:
    vector<int> mergeArrays(vector<vector<int>> &arr) {
        priority_queue<int,vector<int>,greater<int>>pq;
        vector<int>ans;
        // Code here
        for(int i=0;i<arr.size();i++){
            for(int j=0;j<arr[i].size();j++){
                pq.push(arr[i][j]);
            }
        }
        while(!pq.empty()){
            ans.push_back(pq.top());
            pq.pop();
            
        }
        return ans;
        
    }
};
