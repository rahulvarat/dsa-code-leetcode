class Solution {
public:
     int find(vector<int>&arr){
        int maxc=-1;
        for(int i=0;i<256;i++){
            maxc=max(maxc,arr[i]);
           

        }
         return maxc;
     }
    int characterReplacement(string s, int k) {
        vector<int>f(256,0);
        int n=s.size();
        int low=0;
        int high=0;
        int result=INT_MIN;
        for(int high=0;high<n;high++){
            f[s[high]]++;
            int maxcnt=find(f);
            int len=high-low+1;
            int diff=len-maxcnt;
            while(diff>k){
                f[s[low]]--;
                low++;
                maxcnt=find(f);
                len=high-low+1;
                diff=len-maxcnt;
            }
            len=high-low+1;
            result=max(result,len);
        }

            return result;

        
    }
};
