
class Solution {
public:
    ListNode* reverseBetween(ListNode* head, int left, int right) {
        if(head==NULL){
            return NULL;
        }
        if(left==right){
            return head;
        }
        ListNode* t=head;
        ListNode* before=NULL;
        int pos =1;
        while(t!=NULL){
            if(pos<left){
                before=t;
                t=t->next;
                pos++;
                continue;
            }
        }
        ListNode* curr=t;
        ListNode* prev=NULL;
        int time=right-left+1;
        while(time--){
          ListNode* nextNode=curr->next;
            curr->next=prev;
            prev=curr;
            curr=nextNode;
        }
        t->next=curr;
        if(before){
        before->next=prev;
        return head;
        }
        return prev;


        
        
    }
};
